[user]
    name = Harman Patial
    email = harman.patial@gmail.com
[alias]
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    d = diff
    s = status
    log-patch = log --decorate -p --stat
    log-branch = log --decorate --graph --oneline
    log-tree = log --decorate --graph --oneline --all
[commit]
    template = /root/.gittemplate
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[core]
    editor = vim
[apply]
    whitespace=fix
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    pager = less -FRSX
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
